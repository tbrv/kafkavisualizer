<configuration>
    <logger name="kafkavisualizer" level="debug"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%cyan(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSSXXX}}) %highlight(%-5p) %magenta(${PID:- }) %cyan(---) %gray([%15.15t]) %cyan(%-40.40logger{39}) %highlight([%mdc]) %cyan(:) %m%n%ex{full}</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
